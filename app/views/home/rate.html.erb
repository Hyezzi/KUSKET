

<div class="container">
<h5 class="text-center mt-5 mb-4 nanum">경쟁률 조회</h5>

<table class="table table-font text-center nanum">
    <thead class = "thead-light">
    <tr>
        <th>캠퍼스</th>
        <th>학수번호</th>
        <th>분반</th>
        <th>이수구분</th>
        <th>교과목명</th>
        <th>담당교수</th>
        <th>학점</th>
        <th>선택</th>
    </tr>
    </thead>
    <tbody>
    
    <form action="/home/submit" method="get">
    <%x=0%>
    <% @courses.each do |course| %>
    <%x+=1%>
      <tr>
        <td><%= course.campus %></td>
        <td><%= course.haksu %></td>
        <td><%= course.bunban %></td>
        <td><%= course.isu_type %></td>
        <td><%= course.course_name %></td>
        <td><%= course.lecturer %></td>
        <td><%= course.credit %></td>
        <td><%= check_box_tag(:"rate#{x}")%></td>
      </tr>

     <% end %>

    <style>
        .put{
            width:90%;
            background-color: rgba(255,255,255, 0.7);
            
        }
    </style>
    <div class = "put d-flex justify-content-end mb-2 fixed-bottom nanum mx-auto ">
        <input type="submit" value="확정" class = "btn, btn-danger">	
    </div>
    </form>
   
    </tbody>
</table>
</div>
